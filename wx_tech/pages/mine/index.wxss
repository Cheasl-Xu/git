/* pages/setting/index.wxss */

.mine {
  width: 100%;
  height: 100%;
  background-color:#f5f5f5;
}

.mine-group {
  background: #fff;
  margin-bottom: 20rpx;
}

.widget{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.widget.hasline {
  border-bottom: 1rpx solid #eee;
}

.sys-notice{
  border-bottom: 1rpx solid #d8d8d8;
}

.wx-widget{
  position: relative;
  padding: 50rpx 32rpx;
}

.wx__avator{
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
}

.wx__username{
  display: inline-block;
  margin-left: 35rpx;
  padding-top: 35rpx;
  height: 105rpx;
  vertical-align: top;
}
.wx-nickname{
  display: block;
  padding-bottom: 6rpx;
  font-size: 36rpx;
  color: #333;
}
.wx-changeinfo{
  font-size: 28rpx;
  color: #999;
}

.widget__name{
  font-size: 28rpx;
  color: #333;
}

.widget__arrow{
  position: absolute;
  top: 37rpx;
  right: 32rpx;
  width: 16rpx;
  height: 26rpx;
}

.wx-widget__arrow{
  top: 107rpx;
}

