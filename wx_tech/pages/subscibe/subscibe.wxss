.section {
  background-color:#f4f4f4;
}
.subscibe-pages {
  background-color: #fff;
  padding: 0 32rpx;
}
.list-item{
  border-top:1px solid #ddd;
  padding: 54rpx 0 66rpx;
}
.list-item:first-child{
  border-top: none;
}
.content-title{
  width: 410rpx;
  font-size:36rpx;
  color:#4D4D4E;
  line-height: 54rpx;
  margin-bottom: 20rpx;
  font-weight:500;
}
.content-desc{
  width:384rpx;
  font-size:30rpx;
  color:#4D4D4E ;
  line-height: 50rpx;
  margin-bottom:26rpx;
  height:90rpx;
}
.record-wrap {
  font-size:24rpx;
  color:#858585;
}
.re-view,.re-comment,.re-date{
  padding-right:16rpx;
}
.h5-view,.h5-comment,.h5-time{
  font-size:24rpx;
  color:#858585;
}
.img-box {
  width: 274rpx;
  height: 208rpx;
  position: relative;
}
.pic{
  border-radius:6rpx;
}
.linear{
  position:relative;
}
.linear:before{
  content:'';
  width:100%;
  height:70%;
  position:absolute;
  top:0;
  background: -webkit-linear-gradient(rgba(0,0,0,0.5), transparent);
  background: -o-linear-gradient(rgba(0,0,0,0.5), transparent);
  background: -moz-linear-gradient(rgba(0,0,0,0.5), transparent);
  background: linear-gradient(rgba(0,0,0,0.5), transparent);
  border-radius:6rpx;
}
.no-order {
  text-align: center;
  padding-top: 300rpx;
}
.no-order .img-box{
  width:432rpx;
  height: 230rpx;
  margin: 0 auto;
}
.no-content{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333;
  padding-top: 20rpx;
}
.not-content{
  line-height: 30rpx;
  font-size: 22rpx;
  color: #333;
}
.h5-shipin,.h5-yinpin{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  color: #fff;
}
