.view{
	height:100%;
	position:relative;
	background-color:#f5f5f5;
}
.hot-item-container{
	background-color:#f5f5f5;
	position:relative;
}
.img-box{
	height:560rpx;
	width:100%;
}
.audio-content{
	padding:20rpx 30rpx;
	background-color:#fff;
}
.audio-mask{position:relative; }
.audio-info{position:absolute; top:0; left:0; z-index:-1;}
.audio-process{margin-top:20rpx; color:#999;align-items:center;}
.process-line{position:relative; height:4rpx; background-color:#f3f3f3; }
.process-on{position:absolute; top:-2rpx; left:0; height:8rpx; background-color:#474747; }
.process-handle{position:absolute; top:-12rpx; right:-16rpx; width:32rpx; height:32rpx; border:2rpx solid #ccc; border-radius:50%; background-color:#fff; }
.time{display:block; margin:0 30rpx;color:#858585;font-size:20rpx; }
.audio-handle{
		text-align:center;
		position:relative;
}
.loop{
	position:absolute;
	top:30%;
	right:20rpx;
}
.audio-operate{
	margin:20rpx 0;	
}
.h5tech{
	font-size:40rpx;
}
.playing{
	display: inline-block;
  width: 110rpx;
  height: 110rpx;
  background-color: #474747;
  color:#fff;
  text-align: center;
  line-height: 110rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 6rpx #ececec;
}
.operate{
	margin:0 6%;
}
.header{
	padding:32rpx;
	background-color:#fff;
	position:relative;
	margin:20rpx 0;
	align-items:initial;
}
.title{
	font-size:36rpx;
	line-height:44rpx;
	height:44rpx;
	overflow:hidden;
	color:#333;
}
.header-count{
	margin-top:40rpx;
}
.header-count .h5tech{
	color:#858585;
	font-size:24rpx;
	margin-right:10rpx;
}
.count{
	color:#858585;
	line-height:42rpx;
	font-size:24rpx;
	margin-right:18rpx;
}
.give{
	width:48rpx;
	color:#53ae68;
	text-align:center;
}
.h5-zengsong{
	font-size:30rpx;
}
.give-text{
	font-size:24rpx;
	line-height:34rpx;
}
.content{
	background-color:#fff;
	padding:30rpx 36rpx 56rpx;
}
.content-title{
	font-size:30rpx;
	color:#333;
	font-weight:bold;
}
.content-brief{
	font-size:30rpx;
	color:#333;
	margin-top:40rpx;
}

.comment-wrap{
  margin-bottom: 135rpx;
  position:relative;
}
.comment-count{
  line-height: 40rpx;
  font-size:28rpx;
  color:#666666;
  background-color: #F7F7F7;
  border-top: 2rpx solid #DEDEDE;
  padding: 28rpx 0 32rpx 36rpx;
}
.comment-new{
  width:100%;
  position:absolute;
  top:88rpx;
  text-align:center;
  font-size:24rpx;
  color:#858585;
}
.comment-new:before{
  content:"";
  border-top:1px solid;
  position:relative;
  top:12rpx;
  padding-left:120rpx;
}
.comment-new:after{
  content:"";
  border-top:1px solid;
  position:relative;
  top:12rpx;
  padding-right:120rpx;
}
.comment-item{
  padding: 24rpx 30rpx 18rpx 30rpx;
  background-color:#FBFBFB;
  border-bottom: 2rpx solid #DEDEDE;
}
.comment-item:last-child{
  border-bottom: none;
}
.comment-detail{
  padding-bottom: 16rpx;
}
.comment-wrap .img-box{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.comment-wrap image{
  border-radius: 50%;
}
.comment-nick{
  height:40rpx;
  line-height: 40rpx;
  font-size:28rpx;
  color:#666;
}
.comment-time{
  line-height: 33rpx;
  font-size:24rpx;
  color:#858585;
}
.h5-time{
  font-size:24rpx;
}
.h5-zan,.h5-zan_active{
  line-height: 80rpx;
  font-size:32rpx;
  color:#858585;
}
.comment-msg{
  font-size: 30rpx;
  color:#666666;
  line-height:42rpx;
}
.reply-result{
  width:95%;
  height:50rpx;
  font-size:24rpx;
  line-height:50rpx;
  background-color:#f1f1f1;
  padding:10rpx;
  position:relative;
  margin-top:20rpx;
}
.reply-result:before{
  content:":";
  padding:0 10rpx;
  color:#45ae69;
}
.reply-result:after{
  content:"";
  position:absolute;
  border-left: 0 solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 20rpx solid #f0f0f0;
  top: -10px;
  left: 0;
}
.reply{
  line-height: 33rpx;
  font-size:24rpx;
  color: #858585;
  text-align: right;
  padding-top: 10rpx;
}
.input-wrap{
  height: 116rpx;
  line-height: 116rpx;
  background-color: #fff;
  position:fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.comment-input{
  width: 551rpx;
  height: 75rpx;
  background-color: #EDEDED;
  margin: 20rpx 50rpx 15rpx 30rpx;
  border-radius: 10rpx;
  color:#AAAAAA;
  font-size:28rpx;
  padding-left:30rpx;
  line-height: 75rpx;
}
.send-btn{
  font-size: 28rpx;
  color:#333333;
}