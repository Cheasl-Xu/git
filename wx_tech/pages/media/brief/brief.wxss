/* pages/media/brief/brief.wxss */
.view{
	height:100%;
	position:relative;
	background-color:#f5f5f5;
}
.hot-item-container{
	background-color:#f5f5f5;
	position:relative;
}
.img-box{
	height:560rpx;
	width:100%;
}
.audio-content{
	padding:20rpx 30rpx;
	background-color:#fff;
}
.audio-mask{position:relative; }
.audio-info{position:absolute; top:0; left:0; z-index:-1;}
.audio-process{margin-top:20rpx; color:#999;align-items:center;}
.process-line{position:relative; height:4rpx; background-color:#f3f3f3; }
.process-on{position:absolute; top:-2rpx; left:0; height:8rpx; background-color:#474747; }
.process-handle{position:absolute; top:-12rpx; right:-16rpx; width:32rpx; height:32rpx; border:2rpx solid #ccc; border-radius:50%; background-color:#fff; }
.time{display:block; margin:0 30rpx;color:#858585;font-size:20rpx; }
.audio-handle{
		text-align:center;
		position:relative;
}
.loop{
	position:absolute;
	top:30%;
	right:20rpx;
}
.audio-operate{
	margin:20rpx 0;	
}
.h5tech{
	font-size:40rpx;
}
.playing{
	display: inline-block;
  width: 110rpx;
  height: 110rpx;
  background-color: #474747;
  color:#fff;
  text-align: center;
  line-height: 110rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 6rpx #ececec;
}
.operate{
	margin:0 6%;
}
.header{
	padding:32rpx;
	background-color:#fff;
	position:relative;
	margin:20rpx 0;
	align-items:initial;
}
.title{
	font-size:36rpx;
	line-height:44rpx;
	height:44rpx;
	overflow:hidden;
	color:#333;
}
.header-count{
	margin-top:40rpx;
}
.header-count .h5tech{
	color:#858585;
	font-size:24rpx;
	margin-right:10rpx;
}
.count{
	color:#858585;
	line-height:42rpx;
	font-size:24rpx;
	margin-right:18rpx;
}
.give{
	width:48rpx;
	color:#53ae68;
	text-align:center;
}
.h5-zengsong{
	font-size:30rpx;
}
.give-text{
	font-size:24rpx;
	line-height:34rpx;
}
.content{
	background-color:#fff;
	padding:30rpx 36rpx 56rpx;
}
.content-title{
	font-size:30rpx;
	color:#333;
	font-weight:bold;
}
.content-brief{
	font-size:30rpx;
	color:#333;
	margin-top:40rpx;
}
.comment-title{
	padding:34rpx 30rpx;
	border-bottom:2rpx solid #efefef;
	color:#666666;
	font-size:26rpx;
}
.comment-content{
	background-color:#fff;
	padding:24rpx 30rpx 0;
}
.img-avatar{
	width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.comment-name{
	font-size:30rpx;
	color:#666;
	line-height:40rpx;
	height:40rpx;
}
.comment-praise{
	width:34rpx;
	height:34rpx;
	text-align:center;
}
.comment-msg{
	height:40rpx;
	color:#999;
	font-size:24rpx;
	line-height:40rpx;
}
.comment .h5tech{
	font-size:24rpx;
	margin-right:10rpx;
}
.comment-brief{
	margin-top:20rpx;
	font-size:30rpx;
	line-height:40rpx;
	padding-bottom:24rpx;
	border-bottom:2rpx solid #efefef;
}
.comment-content:last-child .comment-brief{
	border-bottom:0;
}
.view-bottom{
	position:absolute;
	bottom:2rpx;
	padding:32rpx 18rpx;
	width:100%;
	box-sizing:border-box;
}