/* pages/cloumn/form/form.wxss */
.hot-item-container{
	background-color:#f5f5f5;
	min-height:100vh;
}
.img-box{
	height:524rpx;
	width:100%;
	position:relative;
}
.blur{
	height:100%;
	width:100%;
	filter: blur(30rpx);
	position: absolute;
    left: 0;
    top: 0;
    z-index: 7;
}
.mark{
	width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.8);
    z-index: 8;
}
.center{
	position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    z-index: 9;
    width: 394rpx;
    height: 512rpx;
    padding:6rpx 0;
}
.header{
	border-bottom:1rpx solid #D6D6D6;
	background-color:#fff;
	padding:30rpx;
	color:#333;
}
.header-title{
	font-size:36rpx;
    line-height: 50rpx;
	font-weight:bold;
}
.header-brief{
	margin-top:10rpx;
    line-height: 40rpx;
	font-size:28rpx;
}
.nav{
	background-color:#fff;
}
.nav-detail,.nav-content{
    text-align:center;
    position:relative;
    padding:26rpx 0;
    font-size:26rpx;
    color: #333333;
    line-height: 37rpx;
}
.active:before{
    content: '';
    position: absolute;
    left: 50%;
    bottom: 0;
    top: auto;
    width: 119rpx;
    height: 4rpx;
    background-color: #4D4D4E;
    transform: translate(-50%);
}
.detail-wrap{
	padding:50rpx 40rpx;
	background-color:#fff;
	margin-top:20rpx;
}
.detail-info{
	font-size:28rpx;
	line-height:40rpx;
	background-color:#fff;
    margin-top:20rpx;
    min-height: 180rpx;
}
.content-info{
	background-color:#fff;
	padding:50rpx 32rpx;
	margin-top:20rpx;
}
.content-box{
	padding-right:20rpx;
}
.content-title{
	font-size:38rpx;
	height:50rpx;
	line-height:50rpx;
	min-height:50rpx;
	color:#4D4D4E;
	font-weight:bold;
}
.content-brief{
	font-size:30rpx;
	line-height:40rpx;
	height:80rpx;
	min-height:80rpx;
	margin-top:20rpx;
	color:#4D4D4E;
}
.content-img{
	width:273rpx;
	height:205rpx;
}
.content-count{
	padding-top:15rpx;
}
.content-icon{
	display:inline-block;
	padding-right:20rpx;
	align-items:center;
	color:#858585;
	font-size:24rpx;
}
.h5tech{
	font-size:24rpx;
	margin-right:10rpx;
}
.error{
	width:100%;
	height:350rpx;
	background-color:#fff;
	text-align:center;
	padding-top:50rpx;
}
.error-img{
	width:350rpx;
	height:200rpx;
}
.error-text{
	font-size:30rpx;
	color:#333;
	padding-top:20rpx;
}
